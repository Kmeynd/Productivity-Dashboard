<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/chart.umd.js"></script>
    <title>Document</title>
</head>
<body>
   
    <div class="Navbar">
        <h2>Navbar</h2>
        <button id="ReduceNav"><</button>
        <div>
            <ul>
                <li>Home</li>
                <li><a href="/task">Add a task</a></li>
                <li>Portfolio</li>
            </ul>
        </div>
    </div>
    <div class="Dashboard">
        <div class="Welcome">
            <h1>Welcome back, Kevin</h1>
            <p>What have you been working on lately ?</p>

        </div>
        <div class="Filter">
            <h2>Filter</h2>
            <div>
                <a href="/?period=7">7</a>
                <a href="/?period=30">30</a>
                <a href="/">365</a>
            </div>
        </div>
        <div class="Stats">
            <h2>Stats</h2>
            <div>
                <div class="TT">
                    <%= db.map((obj)=>{obj.task_name}).length %>
                </div>
                <div class="TH">
                    <%= db.reduce(function (result,item){ return result += parseInt(item.time)},parseInt(0))
                    %>
                </div>
                <div class="GP">
                    %
                </div>
                <div class="LT">
                    <%= db[db.length-1].task_name %>
                </div>
            </div>
            
        </div>
        <div class="HeatMap">
            <h2>Heatmap</h2>

        </div>
        <div class="PieChart">
            <canvas id="Graph_Pie" style=" height:250px; width:250px"></canvas>
             
        </div>
         
    </div>
    <script>
        // const btn = document.getElementById("ReduceNav")
        // btn.addEventListener("click",()=>{
        //     console.log('lets go')
        // })
        const ctx = document.getElementById('Graph_Pie');
        const labels = "<%= cat.map((obj)=>{return obj.category_name})%>".split(',')
        const data = "<%= cat.map((obj)=>{return obj.time})%>".split(",")

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Hours',
                    data: data,
                    backgroundColor: [
                        '#fc0303',
                        '#03dbfc',
                        '#31fc03',
                    ],
                }]
            },
            options : {
                    maintainAspectRatio: false,
                    responsive: false
                }
        });
    </script>
</body>
</html>